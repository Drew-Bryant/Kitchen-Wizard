<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kitchen_Wizard.Views.RecipeSearchPage"
             xmlns:viewmodel="clr-namespace:Kitchen_Wizard.Models"
             xmlns:object="clr-namespace:Kitchen_Wizard.Data_Objects" 
             x:DataType="viewmodel:RecipeSearchPageModel"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Customize" Clicked="SearchOptionsClicked" IconImageSource="{FontImage Glyph='+', Color=White, Size=22}" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto, *"
          ColumnDefinitions=".75*, .25*"
          RowSpacing="10"
          ColumnSpacing="10"
          Padding="10">
        <Entry x:Name="SearchField"
               Text="{Binding SearchField}"
               Placeholder="Click here to search"              
               Grid.Row="0"/>

        <Button Text="Search"
                IsEnabled="{Binding NotLoadingData}"
                Command="{Binding KeywordSearchCommand}"
                CommandParameter="{Binding SearchField}"
                Grid.Row="0"
                Grid.Column="1"/>
        
        <!-- Display search results -->
        <CollectionView x:Name="SearchResults"
                        ItemsSource="{Binding SearchResults}"
                        Margin="20"
                        SelectionMode="Single"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type object:Recipe}">
                    <Grid>
                        <Frame>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="SearchResultTapped"/>
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Name}" FontSize="12"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator IsVisible="{Binding LoadingData}"
                           IsRunning="{Binding LoadingData}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>